{
  "name": "@hoprnet/hopr-utils",
  "homepage": "https://hoprnet.org",
  "description": "HOPR-based utilities to process multiple data structures",
  "version": "1.17.0-alpha.52",
  "repository": "git@github.com:hoprnet/hopr-utils.git",
  "license": "LGPL-3.0-only",
  "types": "lib/index.d.ts",
  "main": "lib/index.js",
  "scripts": {
    "clean": "rm -rf ./lib",
    "test": "jest",
    "dev": "yarn clean && tsc -w",
    "build": "yarn clean && tsc -p . --noEmit false",
    "prepare": "yarn build"
  },
  "files": [
    "lib/",
    "!lib/**/*.spec.*",
    "README.md",
    "package.json",
    "yarn.lock"
  ],
  "engines": {
    "node": ">=12.9.1",
    "yarn": ">=1.19.2"
  },
  "dependencies": {
    "bignumber.js": "^9.0.0",
    "libp2p-crypto": "^0.17.9",
    "peer-info": "^0.17.5",
    "strip-ansi": "^6.0.0",
    "typestub-multihashes": "^0.0.4"
  },
  "devDependencies": {
    "jest": "^26.1.0",
    "@types/node": "^12.12.8",
    "ts-node": "^8.10.2",
    "ts-jest": "^26.1.4",
    "typescript": "^3.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "maxConcurrency": 1
  }
}
